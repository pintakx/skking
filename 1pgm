                $scope.lastName="B T"
            });
        </script>
    </head>
    <body ng-app="myApp">
        <h2>Application to display full name</h2>
        <div ng-controller="myCntrl">
            Enter f name:<input type="text"ng-model="firstName"><br/>
            Enter l name:<input type="text"ng-model="lastName"><br/>
            Your full name is:{{firstName+""+lastName}}
