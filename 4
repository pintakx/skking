<!DOCTYPE html>
<html>
    <title>
        AJS square and factorial application
    </title>
    <head>
        <script type="text/javascript"
        src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js">
    </script>
    <script>
        var app=angular.module("factorialapp",[]);
        app.controller("myfctcntrl",function($scope){
            $scope.num=0
            $scope.result

            $scope.factorial=function()
            {
                if($scope.num==0)
                {
                    $scope.result=1
                }
                else{
                    $scope.fact=1
                    for(var i=$scope.num;i>=1;i--)
                    {
                        $scope.fact=$scope.fact*i
                    }
                    $scope.result=$scope.fact
                }
            }
            $scope.square=function()
            {
                $scope.result=$scope.num*$scope.num
            }
        });
    </script>
    </head>

    <body= ng-app="factorialapp">
        <h1>Factorial and square</h1>
        <div ng-controller="myfctcntrl">
            Enter the number:<input type="number" ng-model="num">
                <button ng-click="factorial()">Compute factorial</button>
                <button ng-click="square()">Compute Square</button>
                <br/>
                {{result}}
        </div>
    </body>
</html>
